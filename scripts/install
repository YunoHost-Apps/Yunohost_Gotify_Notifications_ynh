#!/bin/bash

#=================================================
# IMPORT GENERIC HELPERS
#=================================================

source _common.sh
source /usr/share/yunohost/helpers

#=================================================
# INITIALIZE AND STORE SETTINGS
#=================================================

gotifypath=$gotify
ynh_app_setting_set --key=gotifypath --value=$gotifypath

token=$apptoken
ynh_app_setting_set --key=token --value=$token

server_id=$(cat /etc/machine-id)
ynh_app_setting_set --key=server_id --value=$server_id

hooks_dir="/etc/yunohost/hooks.d"

#=================================================
# DOWNLOAD, CHECK AND UNPACK SOURCE
#=================================================
ynh_script_progression "Setting up source files..."

ynh_setup_source --dest_dir="$data_dir"

#=================================================
# APP INITIAL CONFIGURATION
#=================================================
ynh_script_progression "Adding $app's configuration files..."

cd $hooks_dir
mkdir post_domain_add post_domain_remove post_cert_update backup restore post_app_install post_app_remove post_app_upgrade 2>&1

ynh_config_add --template="$data_dir/post_domain_add/01-post_domain_add" --destination="$hooks_dir/post_domain_add/01-post_domain_add_$server_id"
ynh_config_add --template="$data_dir/post_domain_remove/01-post_domain_remove" --destination="$hooks_dir/post_domain_remove/01-post_domain_remove_$server_id"
ynh_config_add --template="$data_dir/post_cert_update/01-post_cert_update" --destination="$hooks_dir/post_cert_update/01-post_cert_update_$server_id"
ynh_config_add --template="$data_dir/backup/01-backup" --destination="$hooks_dir/backup/01-backup_$server_id"
ynh_config_add --template="$data_dir/restore/01-restore" --destination="$hooks_dir/restore/01-restore_$server_id"
ynh_config_add --template="$data_dir/post_app_install/01-post_app_install" --destination="$hooks_dir/post_app_install/01-post_app_install_$server_id"
ynh_config_add --template="$data_dir/post_app_remove/01-post_app_remove" --destination="$hooks_dir/post_app_remove/01-post_app_remove_$server_id"
ynh_config_add --template="$data_dir/post_app_upgrade/01-post_app_upgrade" --destination="$hooks_dir/post_app_upgrade/01-post_app_upgrade_$server_id"
ynh_config_add --template="$data_dir/etc/profile.d/gotify_ssh_login.sh" --destination="/etc/profile.d/gotify_ssh_login_$server_id.sh"

#=================================================
# END OF SCRIPT
#=================================================

ynh_script_progression "Installation of $app completed"
