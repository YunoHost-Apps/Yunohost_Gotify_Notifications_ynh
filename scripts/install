#!/bin/bash

#=================================================
# IMPORT GENERIC HELPERS
#=================================================

source _common.sh
source /usr/share/yunohost/helpers

#=================================================
# INITIALIZE AND STORE SETTINGS
#=================================================

gotifypath=$gotify
ynh_app_setting_set --key=gotifypath --value=$gotifypath

token=$apptoken
ynh_app_setting_set --key=token --value=$token

server_id=$(cat /etc/machine-id)
ynh_app_setting_set --key=server_id --value=$server_id

ynh_app_setting_set --key=server --value=$server

#=================================================
# DOWNLOAD, CHECK AND UNPACK SOURCE
#=================================================
ynh_script_progression "Setting up source files..."

ynh_setup_source --dest_dir="$data_dir/src"

#=================================================
# APP INITIAL CONFIGURATION
#=================================================
ynh_script_progression "Adding $app's configuration files..."

mkdir -p $data_dir/hooks/etc/yunohost/hooks.d
cd $data_dir/hooks/etc/yunohost/hooks.d

create_dirs post_domain_add post_domain_remove post_cert_update backup restore post_app_install post_app_remove post_app_upgrade etc $data_dir/hooks/etc/profile.d

ynh_config_add --template="$data_dir/src/post_domain_add/01-post_domain_add" --destination="$data_dir/hooks/etc/yunohost/hooks.d/post_domain_add/01-post_domain_add_$app"
ynh_config_add --template="$data_dir/src/post_domain_remove/01-post_domain_remove" --destination="$data_dir/hooks/etc/yunohost/hooks.d/post_domain_remove/01-post_domain_remove_$app"
ynh_config_add --template="$data_dir/src/post_cert_update/01-post_cert_update" --destination="$data_dir/hooks/etc/yunohost/hooks.d/post_cert_update/01-post_cert_update_$app"
ynh_config_add --template="$data_dir/src/backup/01-backup" --destination="$data_dir/hooks/etc/yunohost/hooks.d/backup/01-backup_$app"
ynh_config_add --template="$data_dir/src/restore/01-restore" --destination="$data_dir/hooks/etc/yunohost/hooks.d/restore/01-restore_$app"
ynh_config_add --template="$data_dir/src/post_app_install/01-post_app_install" --destination="$data_dir/hooks/etc/yunohost/hooks.d/post_app_install/01-post_app_install_$app"
ynh_config_add --template="$data_dir/src/post_app_remove/01-post_app_remove" --destination="$data_dir/hooks/etc/yunohost/hooks.d/post_app_remove/01-post_app_remove_$app"
ynh_config_add --template="$data_dir/src/post_app_upgrade/01-post_app_upgrade" --destination="$data_dir/hooks/etc/yunohost/hooks.d/post_app_upgrade/01-post_app_upgrade_$app"
ynh_config_add --template="$data_dir/src/etc/profile.d/gotify_ssh_login.sh" --destination="$data_dir/hooks/etc/profile.d/gotify_ssh_login_$app.sh"

cp -r $data_dir/hooks/* /

#=================================================
# END OF SCRIPT
#=================================================

ynh_script_progression "Installation of $app completed"
