#!/bin/bash

#=================================================
# IMPORT GENERIC HELPERS
#=================================================

source _common.sh
source /usr/share/yunohost/helpers

#=================================================
# DOWNLOAD, CHECK AND UNPACK SOURCE
#=================================================
ynh_script_progression "Upgrading source files..."

ynh_safe_rm $data_dir

ynh_setup_source --dest_dir="$data_dir"

#=================================================
# UPDATE A CONFIG FILE
#=================================================
ynh_script_progression "Updating $app's configuration files..."

cd $hooks_dir
create_dirs post_domain_add post_domain_remove post_cert_update backup restore post_app_install post_app_remove post_app_upgrade

ynh_safe_rm  "$hooks_dir/post_domain_add/01-post_domain_add_$app"
ynh_safe_rm  "$hooks_dir/post_domain_remove/01-post_domain_remove_$app"
ynh_safe_rm  "$hooks_dir/post_cert_update/01-post_cert_update_$app"
ynh_safe_rm  "$hooks_dir/backup/01-backup_$app"
ynh_safe_rm  "$hooks_dir/restore/01-restore_$app"
ynh_safe_rm  "$hooks_dir/post_app_install/01-post_app_install_$app"
ynh_safe_rm  "$hooks_dir/post_app_remove/01-post_app_remove_$app"
ynh_safe_rm  "$hooks_dir/post_app_upgrade/01-post_app_upgrade_$app"
ynh_safe_rm  "/etc/profile.d/gotify_ssh_login_$app.sh"

ynh_config_add --template="$data_dir/post_domain_add/01-post_domain_add" --destination="$hooks_dir/post_domain_add/01-post_domain_add_$app"
ynh_config_add --template="$data_dir/post_domain_remove/01-post_domain_remove" --destination="$hooks_dir/post_domain_remove/01-post_domain_remove_$app"
ynh_config_add --template="$data_dir/post_cert_update/01-post_cert_update" --destination="$hooks_dir/post_cert_update/01-post_cert_update_$app"
ynh_config_add --template="$data_dir/backup/01-backup" --destination="$hooks_dir/backup/01-backup_$app"
ynh_config_add --template="$data_dir/restore/01-restore" --destination="$hooks_dir/restore/01-restore_$app"
ynh_config_add --template="$data_dir/post_app_install/01-post_app_install" --destination="$hooks_dir/post_app_install/01-post_app_install_$app"
ynh_config_add --template="$data_dir/post_app_remove/01-post_app_remove" --destination="$hooks_dir/post_app_remove/01-post_app_remove_$app"
ynh_config_add --template="$data_dir/post_app_upgrade/01-post_app_upgrade" --destination="$hooks_dir/post_app_upgrade/01-post_app_upgrade_$app"
ynh_config_add --template="$data_dir/etc/profile.d/gotify_ssh_login.sh" --destination="/etc/profile.d/gotify_ssh_login_$app.sh"

#=================================================
# END OF SCRIPT
#=================================================

ynh_script_progression "Upgrade of $app completed"
